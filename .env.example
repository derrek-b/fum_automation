# ===========================================
# FUM Automation Service - Environment Template
# ===========================================
# Copy this file to .env.local or .env.[environment]
# and fill in the values for your environment.

# Network Configuration
# ---------------------
# CHAIN_ID: The blockchain network ID
#   - 1337: Local Ganache/Hardhat
#   - 42161: Arbitrum One
#   - 1: Ethereum Mainnet
CHAIN_ID=1337

# WS_URL: WebSocket RPC endpoint for real-time events
#   - Local: ws://localhost:8545
#   - Alchemy: wss://arb-mainnet.g.alchemy.com/v2/YOUR_KEY
WS_URL=ws://localhost:8545

# Executor Wallet
# ---------------
# AUTOMATION_PRIVATE_KEY: Private key for the automation executor wallet
# This wallet signs transactions for vault operations
# WARNING: Never commit real private keys to version control
AUTOMATION_PRIVATE_KEY=

# Service Configuration
# ---------------------
# DEBUG: Enable verbose logging (true/false)
DEBUG=true

# BLACKLIST_PATH: Path to vault blacklist JSON file
BLACKLIST_PATH=./data/.vault-blacklist.json

# TRACKING_DATA_DIR: Directory for vault tracking data
TRACKING_DATA_DIR=./data/vaults

# SSE_PORT: Port for Server-Sent Events HTTP server
SSE_PORT=3001

# RETRY_INTERVAL_MS: Interval between retry cycles for failed vaults (in milliseconds)
#   - 15000 (15 seconds): Recommended for testing
#   - 60000 (1 minute) : Recommended for production (more reactive UI integration)
#   - 300000 (5 minutes): Recommended for production
RETRY_INTERVAL_MS=60000

# MAX_FAILURE_DURATION_MS: Maximum time before a failing vault is blacklisted (in milliseconds)
#   - 60000 (1 minute): Recommended for testing
#   - 3600000 (1 hour): Recommended for production
MAX_FAILURE_DURATION_MS=3600000

# API Keys
# --------
# NEXT_PUBLIC_ALCHEMY_API_KEY: Alchemy API key for RPC calls
NEXT_PUBLIC_ALCHEMY_API_KEY=

# NEXT_PUBLIC_THEGRAPH_API_KEY: The Graph API key for subgraph queries
NEXT_PUBLIC_THEGRAPH_API_KEY=

# Notifications
# -------------
# TELEGRAM_BOT_API_KEY: Telegram bot token for notifications
TELEGRAM_BOT_API_KEY=

# TELEGRAM_CHAT_ID: Telegram chat ID to send notifications to
TELEGRAM_CHAT_ID=
